device          = "DEVICE", deviceName, "=", type, [parameter], ";" ;

signal          = deviceName, [".", pinName], ";" ;

connection      = signal, "->", signal ;



devices         = "DEVICES", "{", deviceName, {",", deviceName}, "}", ";" ;

connections     = "CONNECTIONS", "{", connection, {",", connection}, "}", ";" ;

outputs         = "OUTPUTS", "{", signal, {",", signal}, "}", ";" ;

