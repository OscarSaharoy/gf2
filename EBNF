device          = deviceName, "=", typeName, ["(", [parameter], {",", parameter}, ")"], ";" ;

signal          = deviceName, [".", pinName] ;

connection      = signal, "->", signal, ";" ;

output          = signal, "--", displayName, ";" ;


devices         = ("DEVICES ", "{" | "DEVICES{"), {device}, "}" ;

connections     = ("CONNECTIONS", "{" | "CONNECTIONS{"), {connection}, "}" ;

outputs         = ("OUTPUTS", "{" | "OUTPUTS{"), "{", {output}, "}" ;

